<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.canthonyscott.microinjectioncalc.MakeAnInjectionMix"
    tools:showIn="@layout/activity_make_an_injection_mix">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stock RNA concentration"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="565.2"
            android:layout_weight="1"
            android:id="@+id/stockConcentration"
            android:textColorHint="@color/hintColor"
            android:inputType="numberDecimal"
            android:maxLines="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ng/ul"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desired Final Volume"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="5"
            android:id="@+id/desiredVolume"
            android:textColorHint="@color/hintColor"
            android:maxLines="1"
            android:inputType="numberDecimal"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ul"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desired Final RNA Concentration"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="50dp">

        <EditText
            android:id="@+id/desiredConcentration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="300"
            android:layout_weight="1"
            android:maxLines="1"
            android:textColorHint="@color/hintColor"
            android:inputType="numberDecimal"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ng/ul" />

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/calculate"
        android:layout_gravity="center"
        style="@style/button_styles"/>

    <Button
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clear"
        android:id="@+id/clear"
        android:layout_below="@+id/calculate" />


</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="RNA (ul)"
            android:id="@+id/textView"
            android:layout_alignBaseline="@+id/result_RNA"
            android:layout_alignBottom="@+id/result_RNA"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="0"
            android:gravity="center"
            android:id="@+id/result_RNA"
            android:layout_toLeftOf="@+id/textView"
            android:textSize="30sp"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/resultPhenolRed"
            android:layout_below="@+id/result_RNA"
            android:layout_alignLeft="@+id/result_RNA"
            android:layout_alignStart="@+id/result_RNA"
            android:layout_marginTop="1dp"
            android:hint="0"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="5X dye (ul)"
            android:id="@+id/textView2"
            android:layout_alignBaseline="@+id/resultPhenolRed"
            android:layout_alignBottom="@+id/resultPhenolRed"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/resultPhenolRed"
            android:layout_toEndOf="@+id/resultPhenolRed" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/resultWater"
            android:layout_below="@+id/resultPhenolRed"
            android:layout_alignLeft="@+id/resultPhenolRed"
            android:layout_alignStart="@+id/resultPhenolRed"
            android:layout_marginTop="1dp"
            android:hint="0"
            android:gravity="center"
            android:textSize="30sp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="water (ul)"
            android:id="@+id/textView3"
            android:layout_alignBaseline="@+id/resultWater"
            android:layout_alignBottom="@id/resultWater"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>


    </RelativeLayout>


</LinearLayout>
